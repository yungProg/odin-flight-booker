<%= form_with url: "/flights", method: :get, class: "search-flight" do |form| %>
<div>
    <div>
        <%= form.label :departure_airport %><br>
        <%= form.select :departure_airport, @departure_airports%>
    </div>
    <div>
        <%= form.label :arrival_airport %><br>
        <%= form.select :arrival_airport, @arrival_airports%>
    </div>
    <div>
        <%= form.label :number_of_passengers%><br>
        <%= form.select :number_of_passengers, @number_of_passengers%>
    </div>
    <div>
        <%= form.label :departure_date %><br>
        <%= form.date_select :start_datetime%>
    </div>
</div>

    <%= form.submit "Search" %>
<% end %>